<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/gradientbackground"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/imageViewAnhDaiDien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/myphoto" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/backButton_Home"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button"
            android:drawableStart="@drawable/ic_back"
            android:gravity="fill"
            android:paddingStart="15dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:gravity="center_horizontal"
            android:text="Hoàng Thái Thắng - 2050531200335\n122TLTTD03"
            android:textSize="22sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <View
        android:layout_weight="0.02"
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Profile"
                android:textSize="22sp" android:textStyle="bold"/>

            <View
                android:id="@+id/divider4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/buttonProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_content2"
                android:text="Xem profile"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_above="@+id/buttonProfile"
                android:layout_alignParentTop="true"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:text="Thông tin cơ bản của bản thân"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.02"
            android:background="?android:attr/listDivider" />

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Danh sách món ăn"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/buttonDSM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_content2"
                android:text="Xem danh sách món"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_above="@+id/buttonDSM"
                android:layout_alignParentTop="true"
                android:layout_marginTop="53dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:text="Danh sách các món ăn có trong menu"
                android:textSize="16sp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>